<%- include partiels/HeaderCon.ejs %>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-xl-8">
            <form method="Post" id="formulaire">
                <div class="form-group">
                    <label for="txtPrenom">Nouveau prenom</label>
                    <input type="text" class="form-control" name="txtPrenom" id="txtPrenom">
                </div>
                <div class="form-group">
                    <label for="txtNom">Nouveau nom</label>
                    <input type="text" class="form-control" name="txtNom" id="txtNom">
                </div>
                <div class="form-group">
                    <label for="psdMotDePasse">Nouveau mot de passe</label>
                    <input type="password" class="form-control" name="psdMotDePasse" id="psdMotDePasse">
                </div>
                <div class="form-group">
                    <label for="psdConfirmMotDePasse">Confirmer nouveau mot de passe</label>
                    <input type="password" class="form-control" name="psdConfirmMotDePasse" id="psdConfirmMotDePasse">
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block">Supprimer le compte</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var password = document.getElementById("psdMotDePasse"),
        confirm_password = document.getElementById("psdConfirmMotDePasse");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Les mot de passe ne sont pas identique.");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</Script>

